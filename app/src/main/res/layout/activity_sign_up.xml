<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/picton"
    android:paddingLeft="@dimen/activity_vertical_margin"
    android:paddingRight="@dimen/activity_vertical_margin"
    tools:context=".ActivitySignUp">


    <ImageView
        android:id="@+id/iv_app"
        android:layout_width="100dp"
        android:layout_height="100dp"
        android:src="@drawable/ic_app"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.498"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.074" />


    <TextView
        android:id="@+id/tv_sign_up"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="12dp"
        android:text="@string/register"
        android:textAllCaps="true"
        android:textColor="@color/color1"
        android:textSize="24dp"
        android:textStyle="bold"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.507"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/iv_app" />

    <androidx.constraintlayout.widget.ConstraintLayout
        android:id="@+id/constraintLayout2"
        android:layout_width="358dp"
        android:layout_height="350dp"
        android:orientation="horizontal"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.49"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/tv_sign_up">


        <ImageView
            android:id="@+id/iv_username"
            android:layout_width="wrap_content"
            android:layout_height="24dp"
            android:layout_marginTop="24dp"
            android:layout_marginBottom="16dp"
            android:src="@drawable/ic_username"
            app:layout_constraintBottom_toTopOf="@+id/iv_password"
            app:layout_constraintEnd_toStartOf="@+id/et_username"
            app:layout_constraintTop_toTopOf="parent" />

        <EditText
            android:id="@+id/et_username"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginStart="@dimen/activity_vertical_margin"
            android:layout_marginTop="18dp"
            android:backgroundTint="@color/color1"
            android:hint="@string/username"
            android:textColor="@color/color1"
            android:textColorHint="@color/color_hint"
            app:layout_constraintBottom_toTopOf="@+id/et_password"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="1.0"
            app:layout_constraintLeft_toRightOf="@id/iv_username"
            app:layout_constraintStart_toEndOf="@id/iv_username"
            app:layout_constraintTop_toTopOf="parent" />

        <ImageView
            android:id="@+id/iv_password"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginEnd="6dp"
            android:layout_marginBottom="24dp"
            android:src="@drawable/ic_password"
            app:layout_constraintBottom_toTopOf="@+id/iv_confirm_password"
            app:layout_constraintEnd_toStartOf="@+id/et_password"
            app:layout_constraintTop_toBottomOf="@+id/iv_username" />

        <EditText
            android:id="@+id/et_password"
            android:layout_width="match_parent"
            android:layout_height="45dp"
            android:layout_marginStart="@dimen/activity_vertical_margin"
            android:backgroundTint="@color/color1"
            android:hint="Password"
            android:password="true"
            android:textColor="@color/color1"
            android:textColorHint="@color/color_hint"
            app:layout_constraintBottom_toTopOf="@+id/et_confirm_password"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="0.994"
            app:layout_constraintLeft_toRightOf="@id/iv_password"
            app:layout_constraintStart_toEndOf="@id/et_username"
            app:layout_constraintTop_toBottomOf="@+id/et_username" />

        <ImageView
            android:id="@+id/iv_confirm_password"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginEnd="6dp"
            android:layout_marginBottom="24dp"
            android:src="@drawable/ic_password"
            app:layout_constraintBottom_toTopOf="@+id/iv_email"
            app:layout_constraintEnd_toStartOf="@+id/et_confirm_password"
            app:layout_constraintTop_toBottomOf="@+id/iv_password" />

        <EditText
            android:id="@+id/et_confirm_password"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginStart="30dp"
            android:layout_marginBottom="8dp"
            android:backgroundTint="@color/color1"
            android:hint="Confirm password"
            android:password="true"
            android:textColor="@color/color1"
            android:textColorHint="@color/color_hint"
            app:layout_constraintBottom_toTopOf="@+id/et_email"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="1.0"
            app:layout_constraintLeft_toRightOf="@id/iv_confirm_password"
            app:layout_constraintStart_toEndOf="@id/iv_confirm_password"
            app:layout_constraintTop_toBottomOf="@+id/et_password" />

        <ImageView
            android:id="@+id/iv_date_of_birth"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginEnd="6dp"
            android:layout_marginBottom="24dp"
            android:src="@drawable/ic_date_of_birth"
            app:layout_constraintBottom_toTopOf="@+id/cb_accept"
            app:layout_constraintEnd_toStartOf="@+id/et_date_of_birth"
            app:layout_constraintTop_toBottomOf="@+id/iv_email" />

        <EditText
            android:id="@+id/et_date_of_birth"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginStart="30dp"
            android:backgroundTint="@color/color1"
            android:hint="Date of birth"
            android:textColor="@color/color1"
            android:textColorHint="@color/color_hint"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/et_email" />

        <CheckBox
            android:id="@+id/cb_accept"
            android:layout_width="wrap_content"
            android:layout_height="32dp"
            android:layout_marginStart="16dp"
            android:layout_marginTop="20dp"
            android:buttonTint="@color/color1"
            android:src="@drawable/ic_password"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/iv_date_of_birth" />

        <TextView
            android:id="@+id/tv_accept"
            android:layout_width="287dp"
            android:layout_height="29dp"
            android:backgroundTint="@color/colorAccent"
            android:text="I accept the Terms of Use and Privacy Policy."
            android:textColor="@color/color1"
            app:layout_constraintBottom_toTopOf="@+id/btn_sign_up"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toEndOf="@+id/cb_accept"
            app:layout_constraintTop_toBottomOf="@+id/et_date_of_birth" />


        <Button
            android:id="@+id/btn_sign_up"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="56dp"
            android:background="@color/colorPrimary"
            android:text="sign up"
            android:textAllCaps="true"
            android:textColor="@color/color1"
            android:textSize="16sp"
            android:textStyle="bold"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="1.0"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/et_date_of_birth" />

        <ImageView
            android:id="@+id/iv_email"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginEnd="6dp"
            android:layout_marginBottom="24dp"
            android:src="@drawable/ic_email"
            app:layout_constraintBottom_toTopOf="@+id/iv_date_of_birth"
            app:layout_constraintEnd_toStartOf="@+id/et_email"
            app:layout_constraintTop_toBottomOf="@+id/iv_confirm_password" />

        <EditText
            android:id="@+id/et_email"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginStart="30dp"
            android:backgroundTint="@color/color1"
            android:hint="abc@gmail.com"
            android:textColor="@color/color1"
            android:textColorHint="@color/color_hint"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="0.269"
            app:layout_constraintLeft_toRightOf="@id/iv_email"
            app:layout_constraintStart_toEndOf="@id/iv_email"
            app:layout_constraintTop_toBottomOf="@id/et_confirm_password" />

    </androidx.constraintlayout.widget.ConstraintLayout>

    <Button
        android:id="@+id/btnLogin"
        style="@style/Widget.AppCompat.Button.Borderless"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Already account?  Log in."
        android:textColor="@color/color1"
        android:textStyle="bold"
        app:layout_constraintBottom_toTopOf="@+id/progressBar"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.502"
        app:layout_constraintStart_toStartOf="parent" />

    <ProgressBar
        android:id="@+id/progressBar"
        style="?android:attr/progressBarStyle"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginBottom="48dp"
        android:visibility="invisible"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.501"
        app:layout_constraintStart_toStartOf="parent" />


</androidx.constraintlayout.widget.ConstraintLayout>